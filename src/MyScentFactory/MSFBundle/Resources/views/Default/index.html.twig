{% extends "::Layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="span3">
                {% include "::layout/modulesUsed/nav.html.twig" %}
            </div>
        </div>
        <div class="row">
            <div class="span8 offset3">
                <div class="row">
                    <h1>BIENVENUE CHEZ MY SCENT FACTORY</h1>
                    <h4>Le Bar d'ambiances</h4>


                    {% for photo in image %}

                    <img src="{{ asset('img/') }}{{ photo.imageName }}" alt="{{ photo.alt }}">

                    {%  endfor %}

                </div>

            </div>
            <div class="span12">
                {% block citations %}
                    <div class="span9">
                        <p>Ici laissez libre court à vos désires d'ambiance.</p>

                    </div>

                {% endblock citations %}
            </div>

            <div class="span12">
